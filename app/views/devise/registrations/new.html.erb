<div class="userforms-container">
  <img src="/assets/boxes-right.jpg" class="boxes">
  <div class="userform">
    <img src="/assets/logotype-sm.png" class="logotype">
    <h2>Sign Up</h2>

    <%= link_to user_omniauth_authorize_path(:google_oauth2), :class => "popup", :"data-width" => 500, :"data-height" => 500 do %>
      <div class="google-signup"></div>
    <% end %>

    <%= image_tag "or.png", class: "or"  %>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="userform-group">
      	<%= f.label :first_name, class: "sr-only" %>
      	<%= f.text_field :first_name, :autofocus => true, class: "form-control", placeholder: "First Name" %>
    	</div>

    	<div class="userform-group">
      	<%= f.label :last_name, class: "sr-only" %>
      	<%= f.text_field :last_name, :autofocus => true, class: "form-control", placeholder: "Last Name" %>
    	</div>

      <div class="userform-group">
      	<%= f.label :email, class: "sr-only" %>
      	<%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email" %>
    	</div>

      <div class="userform-group">
      	<%= f.label :password, class: "sr-only" %>
      	<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    	</div>

      <div class="form-group"><%= f.submit "Sign up", class: "btn btn-primary" %></div>
    <% end %>

    <p><%= render "devise/shared/links" %></p>
    <%= render "devise/shared/ghybridauth" %>
  </div>
</div>